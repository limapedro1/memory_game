<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Estado quando o botão é pressionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#D3D3D3" /> <!-- Cor de fundo pressionada -->
            <corners android:radius="15dp" />  <!-- Cantos arredondados -->
        </shape>
    </item>

    <!-- Estado normal do botão -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Cor de fundo normal -->
            <corners android:radius="15dp" />  <!-- Cantos arredondados -->
            <stroke android:width="2dp" android:color="#000000" /> <!-- Borda -->
        </shape>
    </item>

</selector>
